import java.util.*;

public class programmers_2_예상대진표 {

    public int solution(int n, int a, int b){
        ArrayList <Integer> list = new ArrayList<Integer>();
        ArrayList <Integer> temp = new ArrayList<Integer>();
        
        for(int i=1;i<=n;i++)
        	list.add(i);
        
        int a_idx = a;
        int b_idx = b;
        
        int answer = 0;
        while(true) {
        	int num =1;
	        for(int i=1; i <= list.size(); i = i+2) {
	        	
	        	if(list.get(i) == a_idx || list.get(i) == b_idx) {
	        		temp.add(num);
	        		a_idx = num;
	        	}
	        	
	        	else if(list.get(i+1) == a_idx || list.get(i+1) == b_idx) {
	        		temp.add(num);
	        		b_idx = num;
	        	}
	        	
	        	else {
	        		temp.add(num);
	        	}
	        
	        	num++;
	        }
	        
	        answer++;
	        
	        if(a_idx+1 ==b_idx) {
	        	answer = answer +1;
	        	break; //break하고 나가기
	        }
	        
	        list.clear();
	        list=temp;
        }

        return answer;
    }
	
	
	public static void main(String[] args) {
		
	}
}
