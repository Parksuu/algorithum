
public class programmers12947 {

	  static public boolean solution(int x) {
	      boolean answer = true;
	      
	      int sum = 0;
	      int len = String.valueOf(x).length();
	      
	      for(int i=0;i<len;i++) {
	    	  sum = sum + (int)(x%10);
	    	  x = x/10;
	      }
	      
	      System.out.println(sum);
	      
	      if(x%sum ==0)
	    	  answer=true;
	      else
	    	  answer = false;
	      
	      System.out.println(x%sum);
	      
	      return answer;
	  }
	   
	  public static void main(String[] args) {
		
		  solution(18);
		  
	}
	
}
