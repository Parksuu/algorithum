
public class programmers12926 {

	
	  public String solution(String s, int n) {
	      String answer = "";
	      
	      String ar[] = s.split("");
	      
	      for(String ss : ar) {
	    	  String st = "";
	    	  char a;
	    	  if(ss.charAt(0) == 'z') {
	    		  a = (char) ('a' + (n-1));
	    		  st = String.valueOf(a);
	    	  }
	    	  else {
	    		 a = (char) (ss.charAt(0) + n);
	    		 st = String.valueOf(a);
	    	  }
	    	  answer = answer + st;
	      }
	      
	      
	      return answer;
	  }
	
	public static void main(String[] args) {
		char a='B' + 4;
		System.out.println(a);
	}
	
	
}
