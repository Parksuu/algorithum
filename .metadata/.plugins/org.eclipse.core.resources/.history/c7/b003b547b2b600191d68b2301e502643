
public class programmers12913 {
	
	int maxx(int num1, int num2, int num3) {
		int max=0;
		
        if (num1 >= num2 && num1 >= num3) 
            max = num1;
        else if (num2 >= num1 && num2 >= num3)
            max = num2;
        else
            max = num3;

		return max;
	}
	
	
	int solution(int[][] land) {
        int answer = 0;

        int size = land.length; //행의 개수

        for(int i=0;i<size;i++) {
        	//i+1번째 행 0번째 열에는 i번째 행에 1,2,3 열중 최대값을 더해준다
        	land[i+1][0] = land[i+1][1] + maxx(land[i][1], land[i][2], land[i][3]);
        	land[i+1][1] = land[i+1][1] + maxx(land[i][1], land[i][2], land[i][3]);
        	land[i+1][2] = land[i+1][1] + maxx(land[i][1], land[i][2], land[i][3]);
        	land[i+1][3] = land[i+1][1] + maxx(land[i][1], land[i][2], land[i][3]);
        }
        
        //마지막 행의 1,2,3,4 열들이 최대 값을 가진다.
        for(int i=0; i<4; i++)
        	answer = Math.max(answer, land[size-1][i]);
        
        
        for(int i=0; i<4; i++)
        	answer = Math.max(answer, temp[size-1][i]);
        	//if 행=3 -> max(answer, temp(2 - 0,1,2,3);
        return answer;
    }
    
