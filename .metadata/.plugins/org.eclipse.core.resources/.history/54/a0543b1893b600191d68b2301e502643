
public class programmers12926 {

	
	  static public String solution(String s, int n) {
	      String answer = "";
	      
	      String ar[] = s.split("");
	      
	      //큰 n도 체크해서 넘어가면 다른 문자 되니까
	      n = n%26;
	      
	      for(String ss : ar) {
	    	  String st = "";
	    	  char a;
	    	  
	    	  if(ss.charAt(0) == 'z') 
	    		  a = (char) ('a' + (n-1));
	    	  
	    	  
	    	  else if(ss.charAt(0) == 'Z') 
	    		  a = (char) (('A' + (n-1)) % 26) ;
	    	  
	    	  
	    	  else if(ss.charAt(0) == ' ')
	    		  a = (char)(' ');
	    	  
	    	  
	    	  else 
	    		 a = (char) ((ss.charAt(0) + n) %26);

    		  st = String.valueOf(a);
	    	  answer = answer + st;
	      }
	      
	      return answer;
	  }
	
	public static void main(String[] args) {

		System.out.println(solution("a B Z",4));
	}
	
	
}