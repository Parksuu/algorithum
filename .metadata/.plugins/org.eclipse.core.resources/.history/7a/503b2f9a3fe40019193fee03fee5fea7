import java.util.*;

public class programmers_영어끝말잇기 {
    public int[] solution(int n, String[] words) {
        int[] answer =new int[2];
        int len = words.length;
        
        boolean check = false;
        int turn = 1;
        
        for(int i=0;i<len;i++) {
        	for(int j=i+1;j<len;j++) {
        		if(words[i].equals(words[j])) {
        			answer[0] = 
        			answer[1] = turn;
        			check = true;
        			break;
        		}
            	
        		turn = (turn+1) %n
        		if(turn == 0)
        			turn=1;
        	}
        	
        
        }
        
        if(check == false){
        	answer[0] = 0;
        	answer[1] = 0;
        }
        

        return answer;
    }
    
}
