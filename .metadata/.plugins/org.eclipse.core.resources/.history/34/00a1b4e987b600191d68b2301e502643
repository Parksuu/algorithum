
public class programmers12933 {

	  static public long solution(long n) {
	      long answer = 0;
	      
	      int size[] = new int[10]; //저장하기    
	      String ss = String.valueOf(n);
	      String s[] = ss.split("");
	      
	      String ans="";
	      
	      for(String sss : s) {
	    	  int a = Integer.parseInt(sss); //하나씩 가져오기
	    	  
	    	  System.out.println(a);
	    	  
	    	  if(a==0)
	    		  size[0]++;
	    	  else if(a==1)
	    		  size[1]++;
	    	  else if(a==2)
	    		  size[2]++;	
	    	  else if(a==3)
	    		  size[3]++;	
	    	  else if(a==4)
	    		  size[4]++;	
	    	  else if(a==5)
	    		  size[5]++;	
	    	  else if(a==6)
	    		  size[6]++;	
	    	  else if(a==7)
	    		  size[7]++;	
	    	  else if(a==8)
	    		  size[8]++;
	    	  else if(a==9)
	    		  size[9]++;	  
	      }
	      
	      for(int i=0;i<size.length ;i++) {
	    	  System.out.println(size[i]);
	      }
	      
	      for(int i=size.length-1; i<=0; i--) {

	    	  if(size[i] != 0) {
	    		  
	    		  while(size[i] != 0) {
	    			  ans = ans + Integer.toString(i);
	    			  size[i]--;
	    		  }
  
	    	  }
	      }
	      
	      System.out.println("ans" + ans);
	      
	      //answer = Long.valueOf(ans).longValue();
	      
	      return answer;
	  }
	
	  
	 public static void main(String[] args) {
		System.out.println(solution(1111));
	}
}
