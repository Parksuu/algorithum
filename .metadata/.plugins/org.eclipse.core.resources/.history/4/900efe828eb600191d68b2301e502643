
public class programmers12926 {

	
	  public String solution(String s, int n) {
	      String answer = "";
	      
	      String ar[] = s.split("");
	      
	      for(String ss : ar) {
	    	  String st = "";
	    	  
	    	  if(ss.charAt(0) == 'z') {
	    		  st = String.valueOf('a' + n)
	    	  }
	    	  
	    	  else
	    		 st = String.valueOf(ss.charAt(0) + n);
	    	  
	    	  answer = answer + st;
	      }
	      
	      
	      return answer;
	  }
	
	public static void main(String[] args) {
		
		
	}
	
	
}
