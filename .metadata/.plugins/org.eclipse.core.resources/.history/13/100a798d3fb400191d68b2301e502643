
public class programmers12940 {

	
	  public int[] solution(int n, int m) {
	      int[] answer = new int[2];

	      
	      //최대공약수 - 유클리드 호제법
	      if(m>n) {
	    	  int temp = m;
	    	  m = n;
	    	  n = temp;
	      }
	   
	      int realn = n;
	      int realm = m;
	      
	      //n이 크고 m이 작다고 가정
	     int num = 0;
	     do{
	    	 if(num==0) break;
	    	 
	    	 num = realn%realm;
	    	 realn = realm;
	    	 realm = num;
	    	 
	     }while(num !=0);
	      
	     answer[0] = realm;
	      
	     answer[1] = n*m/realm; 
	      //최소공배수
	      
	      
	      return answer;
	  }	
	
}
