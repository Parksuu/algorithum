import java.util.Scanner;

public class beak_3190_¹ì {

	static int scores[];
	static boolean check = true; //true¸é ÇÑÄ­, µÎÄ­ °¡´É / flase¸é ¹«Á¶°Ç µÎÄ­ °¡´É
	
	static void stair(int idx) {
		
		int j=0;
		int k=0;
		for(int i = idx; i>=1; i=j) {
			
			if(check == true) {
				
				if(scores[i-1] > scores[i-2]) {
					scores[i-1] = scores[i-1] + scores[i];
					check = false;
					System.out.println("1-> " + scores[i-1] +"  socres[idx]" + scores[i]);
	
					j = i-1;
				}
				
				else {
					scores[i-2] = scores[i-2] + scores[i];
					System.out.println("2-> " + scores[i-2] +"  socres[idx]" + scores[i]);
					
					j = i-2;
				}
				
			}
			else {
				System.out.println(i-2);
				scores[i-2] = scores[i-2] + scores[i];
				stair(i-2);
				check = true;
				System.out.println("3-> " + scores[i-2] +"  socres[idx]" + scores[i]);
	
				j = i-2;
			}
			
			k=j;
		}//for
		
		if( check==true && k == 1) {
			System.out.println("a " +(scores[0]+scores[k]));
			return ;
		}
		
		else if(check==false && k == 1) {
			System.out.println("b " + scores[k]);
			return ;
		}
		
		
	
	}
	
	
	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		
		int num = sc.nextInt();
		scores= new int[num];
		
		for(int i=0; i<num; i++)
			scores[i] = sc.nextInt();
		
		
		stair(num-1);
		
	}
}
