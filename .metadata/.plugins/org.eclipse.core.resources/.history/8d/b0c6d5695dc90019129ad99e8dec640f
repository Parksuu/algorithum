import java.util.*;


public class programmers_2_타겟넘버 {

	static int sum = 0;
	
	static int size=0;
	static int targ = 0;
	static int answer = 0;
	
	static void dfs(int num[], int sum, int index) {
		if(index ==size) {//base case
			if(sum==targ) {
				answer ++;
				return ;
			}
		}
		
		if(index<size) { //이렇게 계속 조건 걸어줘야함...?
			dfs(num, sum + num[index], index+1);
			dfs(num, sum - num[index], index+1);
		}
	}
	
	static public int solution(int[] numbers, int target) {

		targ = target;
		size = numbers.length;
		
		dfs(numbers, sum, 0);
		
        return answer;
    }
    
	public static void main(String[] args) {
		int a[] = {1,1,1,1,1};
		
		System.out.println("답:" + solution(a,3));
		
	}
}


