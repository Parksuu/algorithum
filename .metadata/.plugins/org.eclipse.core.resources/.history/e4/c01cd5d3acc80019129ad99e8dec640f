import java.util.*;


public class programmers_3_네트워크{

	static int computer[][];
	static boolean visited[];
	static List<Integer> list = new LinkedList<Integer>();
	static int answer = 0;
	
	static void dfs(int a[][], boolean visited[], int idx) {

		visited[idx] = true; //idx 방문
		list.add(idx);

		for(int i=idx+1; i<a.length; i++) {
			if(a[idx][i] ==1 && visited[i] ==false)
				dfs(a,visited,i);
		}
		
	}
	
    static public int solution(int n, int[][] computers) {
    	computer = computers;
    	visited = new boolean[n];

    	for(int i=0;i<n;i++) {
    		if(visited[i] == false)
    			dfs(computer,visited,i); //한번 돌고 나올 때 마다 연결 되어있는 애들 다 체크해서 나오니까 
    		answer++; //그 때 마마다 answer +1 해준다
    	}

        return answer;
    }
	
	
	public static void main(String[] args) {
		int a[][] = {{1,1,0},{1,1,0},{0,0,1}};
		System.out.println("답 " +solution(3,a));
	}
}